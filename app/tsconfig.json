{
    "compilerOptions": {
        "target": "ES6",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react",
        "checkJs": false,
        "noFallthroughCasesInSwitch": true,
        "baseUrl": "src",
        "types": [
            "node"
        ]
    },
    "include": [
        "src",
        "**/*.ts",
        "**/*.tsx",
        "**/*.d.ts"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.tsx"
    ]
}